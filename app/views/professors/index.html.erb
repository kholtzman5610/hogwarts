<br>
<div class="container text-center">
    <div class="row row-cols-1 row-cols-md-3">
        <% @professors.each do |professor| %>
            <div class="col-sm-3">
                <div class="card" id="background">
                    <div class="card-body">
                        <h5 class="card-title"> <%= professor.full_name %></h5>
                        <h5 class="card-title"> <%= professor.house.name %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<%= stylesheet_link_tag 'professor', media: 'all', 'data-turbolinks-track': 'reload' %>

<style>
.card{
    margin-bottom: 20px;
}

#background {
    background-color: rgba(0,0,0,0.6)
}
body {
    color:  white;
    font-size: 15px;
}
</style>
