<div class="container text-center">
    <table>
        <thead>
        <tr>
            <th>Student first name</th>
            <th>Student last name</th>
            <th>House</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
            <% @students.each do |student| %>
                <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.house.name %></td>
                    <td><%= button_to 'Destroy', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary delete-btn" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

